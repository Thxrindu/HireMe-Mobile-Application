<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background"
    android:orientation="vertical"
    tools:context=".IT20133290_VacancyMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/background_padding"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/card_padding"
                android:layout_marginTop="@dimen/card_padding"
                android:layout_marginEnd="@dimen/card_padding"
                android:layout_marginBottom="@dimen/card_padding"
                android:layout_weight="0.5"
                android:background="@drawable/backgroundop3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:padding="@dimen/card_padding"
                    android:text="@string/AddVacancyMenu"
                    android:textColor="@color/title2"
                    android:textSize="30sp" />

                <Button

                    android:id="@+id/btnAddVaMenu"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:background="@android:color/transparent"
                    android:onClick="onClick"
                    android:padding="@dimen/card_padding"
                    android:text="@string/Enter"
                    android:textColor="@color/title" />

            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/card_pic_width"
                android:layout_height="@dimen/card_pic_height"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="-30dp"
                android:layout_marginBottom="-13dp"
                android:src="@drawable/add_vacancy_menu" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/card_padding"
                android:layout_marginTop="@dimen/card_padding"
                android:layout_marginEnd="@dimen/card_padding"
                android:layout_marginBottom="@dimen/card_padding"
                android:layout_weight="0.5"
                android:background="@drawable/backgroundop3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:padding="@dimen/card_padding"
                    android:text="@string/PublishedVacancyMenu"
                    android:textColor="@color/title2"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnPublishedVaMenu"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:textColor="@color/title"
                    android:background="@android:color/transparent"
                    android:onClick="onClick"
                    android:padding="@dimen/card_padding"
                    android:text="@string/Enter" />

            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/card_pic_width"
                android:layout_height="@dimen/card_pic_height"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="-51dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/published_vacancy_menu" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/card_padding"
                android:layout_marginTop="@dimen/card_padding"
                android:layout_marginEnd="@dimen/card_padding"
                android:layout_marginBottom="@dimen/card_padding"
                android:layout_weight="0.5"
                android:background="@drawable/backgroundop3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:padding="@dimen/card_padding"
                    android:text="@string/WorkersFeedbackMenu"
                    android:textColor="@color/title2"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnInterviewMenu"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:textColor="@color/title"
                    android:background="@android:color/transparent"
                    android:onClick="onClick"
                    android:padding="@dimen/card_padding"
                    android:text="@string/Enter" />

            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/card_pic_width"
                android:layout_height="@dimen/card_pic_height"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="-36dp"
                android:src="@drawable/interview_menu" />


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>