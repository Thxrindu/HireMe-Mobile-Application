<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:id="@+id/l1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="6dp"
        app:cardBackgroundColor="#EEEEEE"
        app:cardCornerRadius="6dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EFE9E9"
            android:padding="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="#ff000000"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/wnametest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img1"
                android:text="worker name"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wemailtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wnametest"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img1"
                android:text="worker email"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/wjobtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wemailtext"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img1"
                android:text="worker job"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <Button
                android:id="@+id/btnfeedback"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wjobtext"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img1"
                android:text="Add review"
                android:textAllCaps="false" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>